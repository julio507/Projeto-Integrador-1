<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="StockManager" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.yard.stockmanager.persistence.entity.Worker</class>
    <class>com.yard.stockmanager.persistence.entity.Tipo</class>
    <class>com.yard.stockmanager.persistence.entity.Pessoa</class>
    <class>com.yard.stockmanager.persistence.entity.Telefones</class>
    <class>com.yard.stockmanager.persistence.entity.NfeHasProduto</class>
    <class>com.yard.stockmanager.persistence.entity.Endereco</class>
    <class>com.yard.stockmanager.persistence.entity.Categoria</class>
    <class>com.yard.stockmanager.persistence.entity.Estoque</class>
    <class>com.yard.stockmanager.persistence.entity.Cidade</class>
    <class>com.yard.stockmanager.persistence.entity.Departamento</class>
    <class>com.yard.stockmanager.persistence.entity.Marca</class>
    <class>com.yard.stockmanager.persistence.entity.Nfe</class>
    <class>com.yard.stockmanager.persistence.entity.Agendamento</class>
    <class>com.yard.stockmanager.persistence.entity.EstoqueHasProduto</class>
    <class>com.yard.stockmanager.persistence.entity.Produto</class>
    <class>com.yard.stockmanager.persistence.entity.Funcionario</class>
    <class>com.yard.stockmanager.persistence.entity.PessoaHasTelefones</class>
    <class>com.yard.stockmanager.persistence.entity.Unidade</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/stockmanager?user=root&amp;useTimezone=true&amp;serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="bruchjulio"/>
    </properties>
  </persistence-unit>
</persistence>
